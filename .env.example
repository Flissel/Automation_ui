# ==============================================
# Automation UI - Environment Configuration
# ==============================================
# Copy this file to .env and fill in your values
# NEVER commit .env with real credentials!

# Server
HOST="localhost"
PORT="8007"

# Backend API URL
VITE_BACKEND_URL="http://localhost:8007"

# Local WebSocket URL for development
VITE_WS_URL="ws://localhost:8007/ws"

# PostgreSQL Database (Local - Docker Compose)
POSTGRES_USER="trae"
POSTGRES_PASSWORD="change-me-in-production"
POSTGRES_DB="automation_ui"
POSTGRES_PORT="5432"
DATABASE_URL="postgresql://trae:change-me-in-production@localhost:5432/automation_ui"

# Redis (Local - Docker Compose)
REDIS_URL="redis://localhost:6379/0"
REDIS_PORT="6379"

# Supabase (optional)
VITE_SUPABASE_URL="https://your-project.supabase.co"
VITE_SUPABASE_ANON_KEY="your-supabase-anon-key"

# OpenRouter API Configuration
OPENROUTER_API_KEY=sk-or-your-key-here
OPENAI_API_BASE=https://openrouter.ai/api/v1
OPENAI_MODEL=google/gemini-2.5-flash:nitro

# LLM Model Configuration (OpenRouter)
LLM_MODEL=anthropic/claude-opus-4
VISION_MODEL=nvidia/nemotron-nano-12b-v2-vl:free
COMPACTION_MODEL=google/gemini-3-flash-preview

# Video Agent Configuration
VIDEO_AGENT_DEFAULT=true           # Enable Video Agent (passive analysis)
VIDEO_AGENT_GUARDIAN_MODE=false    # Enable Guardian Mode (auto-correction)
VIDEO_AGENT_MONITOR_MODE=false     # Enable Monitor Mode (realtime watching)
VIDEO_AGENT_MAX_RETRIES=2          # Max correction attempts
VIDEO_AGENT_MONITOR_INTERVAL=2.0   # Min seconds between monitor analyses

# Remote Execution (Brain-in-Docker mode)
# "local" = everything local (default), "remote" = delegate actions to Desktop Client
EXECUTION_MODE=local
REMOTE_DESKTOP_CLIENT_ID=
REMOTE_ACTION_TIMEOUT=30
REMOTE_FRAME_MAX_AGE_MS=500
