# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Service URLs (for development)
VIRTUAL_DESKTOP_SERVICE_URL=http://localhost:8000
WORKFLOW_ORCHESTRATOR_URL=http://localhost:8001
DESKTOP_AUTOMATION_URL=http://localhost:8002
OCR_PROCESSOR_URL=http://localhost:8003
API_GATEWAY_URL=http://localhost:8080

# Database Configuration (if using local PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=virtual_desktop
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security Configuration
JWT_SECRET=your_jwt_secret_here
API_KEY=your_api_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Service Configuration
NODE_ENV=development
LOG_LEVEL=info
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Virtual Desktop Configuration
DEFAULT_DESKTOP_RESOLUTION_WIDTH=1920
DEFAULT_DESKTOP_RESOLUTION_HEIGHT=1080
MAX_CONCURRENT_DESKTOPS=10
DESKTOP_TIMEOUT_MS=300000

# Workflow Configuration
MAX_WORKFLOW_DURATION_MS=600000
WORKFLOW_RETRY_ATTEMPTS=3
WORKFLOW_STEP_TIMEOUT_MS=30000

# OCR Configuration
OCR_ENGINE=tesseract
OCR_LANGUAGE=eng
OCR_CONFIDENCE_THRESHOLD=60

# Automation Configuration
AUTOMATION_DELAY_MS=500
SCREENSHOT_QUALITY=80
SCREENSHOT_FORMAT=png

# Monitoring and Logging
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_FILE_PATH=/app/logs/service.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30

# External Services
N8N_WEBHOOK_URL=
ZAPIER_WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# Development Settings
ENABLE_CORS=true
ENABLE_DEBUG_LOGS=true
MOCK_DESKTOP_ACTIONS=false